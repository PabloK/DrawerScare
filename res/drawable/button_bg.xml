<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
               <gradient
                android:startColor="#FF6600"
                android:endColor="#EE4400"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF6600" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="30dp"
                android:top="2dp"
                android:right="30dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#CCCCCC"
                android:endColor="#777777"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#888888" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="30dp"
                android:top="2dp"
                android:right="30dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>